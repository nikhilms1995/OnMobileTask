
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Subscribed</title>
</head>
<body>
    <h3>Are you sure you want to subscribe?</h3>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Cancel" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Cancelled", "User") + "'");" />
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Confirmation", "User") + "'");" />
        </div>
    }
</body>
</html>
